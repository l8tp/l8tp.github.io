{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**/*",  # 处理所有静态文件
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { 
      "src": "/json/ware.json", 
      "dest": "/json/ware.json" 
    },
    {
      "src": "/(.*)",
      "dest": "/server.js"
    }
  ]
}
